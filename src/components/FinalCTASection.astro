---
import RegisterBox from "./RegisterBox";
interface Props {
  title: string;
  description: string;
  ctaText: string;
  ctaLink: string;
}

const { title, description, ctaText, ctaLink } = Astro.props;
---

<section class="relative py-24 overflow-hidden" id="contacto">
  <!-- Fondo con gradiente -->
  <div class="absolute inset-0">
    <div class="section-gradient"></div>
    <div
      class="absolute inset-0 bg-gradient-to-br from-oxford-blue-3/50 via-oxford-blue-2/70 to-oxford-blue/90"
    >
      <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-true-blue/10 via-transparent to-transparent"
      >
      </div>
    </div>
  </div>

  <!-- Superposición para suavizar transiciones -->
  <div class="section-overlay"></div>
  <div class="section-transition-top"></div>
  <div class="section-transition-bottom"></div>

  <!-- Formas flotantes -->
  <div class="floating-shape top-1/4 left-1/4 animate-pulse opacity-30"></div>
  <div
    class="floating-shape bottom-1/4 right-1/4 animate-pulse delay-300 opacity-30"
  >
  </div>

  <div class="container relative z-10">
    <div class="content-container text-center">
      <h2
        class="text-4xl md:text-5xl font-bold text-white mb-10 drop-shadow-lg gradient-text"
      >
        {title}
      </h2>
      <div class="decorative-line mb-16">
        <p class="text-cool-gray drop-shadow-md subtitle">
          {description}
        </p>
      </div>

      <div class="flex flex-col md:flex-row items-center justify-center gap-12">
        <div class="w-full md:w-1/2">
          <RegisterBox client:load />
        </div>
        <div class="w-full md:w-1/2 text-left">
          <h3 class="text-2xl font-bold text-white mb-6">
            ¿Por qué inscribirse y ver la clase?
          </h3>
          <ul class="space-y-4 text-cool-gray">
            <li class="flex items-start gap-3">
              <svg
                class="w-6 h-6 text-true-blue flex-shrink-0 mt-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Acceso inmediato a la clase exclusiva</span>
            </li>
            <li class="flex items-start gap-3">
              <svg
                class="w-6 h-6 text-true-blue flex-shrink-0 mt-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Conocimiento directo de Luis Garre</span>
            </li>
            <li class="flex items-start gap-3">
              <svg
                class="w-6 h-6 text-true-blue flex-shrink-0 mt-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Introducción a la metodología de transformación</span>
            </li>
            <li class="flex items-start gap-3">
              <svg
                class="w-6 h-6 text-true-blue flex-shrink-0 mt-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M5 13l4 4L19 7"></path>
              </svg>
              <span>Primeros pasos hacia tu transformación</span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
