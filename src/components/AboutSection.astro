---
interface Props {
  title: string;
  description: string;
  achievements: string[];
}

const { title, description, achievements } = Astro.props;
---

<section class="relative py-24 overflow-hidden">
  <!-- Fondo con gradiente -->
  <div class="absolute inset-0">
    <div class="section-gradient"></div>
    <div
      class="absolute inset-0 bg-gradient-to-br from-oxford-blue-3/50 via-oxford-blue-2/70 to-oxford-blue/90"
    >
      <div
        class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-true-blue/10 via-transparent to-transparent"
      >
      </div>
    </div>
  </div>

  <!-- Imagen de fondo con efecto translúcido -->
  <div class="absolute inset-0">
    <div
      class="absolute inset-0 bg-gradient-to-l from-oxford-blue-3/50 via-transparent to-transparent z-10"
    >
    </div>
    <img
      src="/about.png"
      alt="About section background"
      class="absolute right-0 top-0 h-full w-auto object-cover opacity-35 mix-blend-overlay"
    />
  </div>

  <!-- Superposición para suavizar transiciones -->
  <div class="section-overlay"></div>
  <div class="section-transition-top"></div>
  <div class="section-transition-bottom"></div>

  <!-- Formas flotantes -->
  <div class="floating-shape top-1/4 left-1/4 animate-pulse opacity-30"></div>
  <div
    class="floating-shape bottom-1/4 right-1/4 animate-pulse delay-300 opacity-30"
  >
  </div>

  <div class="container relative z-10">
    <div class="content-container text-center">
      <h2
        class="text-4xl md:text-5xl font-bold text-white mb-10 drop-shadow-lg gradient-text"
      >
        {title}
      </h2>
      <div class="decorative-line mb-16">
        <p class="text-cool-gray drop-shadow-md subtitle">
          {description}
        </p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {
          achievements.map((achievement) => (
            <div class="glass-card p-8 rounded-lg transform hover:scale-105 transition-all duration-300">
              <div class="flex items-start">
                <div class="w-10 h-10 rounded-full bg-true-blue/20 flex items-center justify-center mr-6 flex-shrink-0">
                  <svg
                    class="w-5 h-5 text-true-blue"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z"
                    />
                  </svg>
                </div>
                <p class="text-lg md:text-xl text-white text-left">
                  {achievement}
                </p>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
